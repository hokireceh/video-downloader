BOT_TOKEN=your_telegram_bot_token_here
DOWNLOAD_FOLDER=./downloads
MAX_FILE_SIZE=50000000

# ===== Telegram Bot API Configuration =====
# Option 1: Cloud Bot API (Default - Max 50MB)
USE_LOCAL_API=false

# Option 2: Local Bot API (Max 2GB)
# For Replit testing: Uncomment below
# USE_LOCAL_API=true
# LOCAL_API_URL=http://localhost:8081
# LOCAL_API_PORT=8081
# TELEGRAM_API_ID=your_api_id_from_my_telegram_org
# TELEGRAM_API_HASH=your_api_hash_from_my_telegram_org

# For Ubuntu Server (production): Use tunnel URL instead
# USE_LOCAL_API=true
# LOCAL_API_URL=https://your-ngrok-url.ngrok-free.dev
# TELEGRAM_API_ID=your_api_id_from_my_telegram_org
# TELEGRAM_API_HASH=your_api_hash_from_my_telegram_org

# Get API ID & Hash from: https://my.telegram.org/apps